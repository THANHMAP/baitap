<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>

    </style>

    <style name="buttonOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:onClick">operationAction</item>
    </style>

    <style name="buttonClear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:onClick">clearAction</item>
    </style>

    <style name="buttonDelete">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:onClick">delAction</item>
    </style>

    <style name="buttonResult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>